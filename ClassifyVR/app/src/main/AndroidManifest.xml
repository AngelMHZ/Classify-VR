            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ScheduleActivity"             android:screenOrientation="portrait"
            />
        <activity android:name=".ClassesActivity"             android:screenOrientation="portrait"
            />
        <activity android:name=".SportsActivity"             android:screenOrientation="portrait"
            />
        <activity android:name=".VPACActivity"             android:screenOrientation="portrait"
            />
        <activity android:name=".ClubsActivity"             android:screenOrientation="portrait"
            />
        <activity android:name=".GreekActivity"             android:screenOrientation="portrait"
            />
        <activity android:name=".HistoryPage"             android:screenOrientation="portrait"
            />
        <activity android:name=".HistoryReview"             android:screenOrientation="portrait"
            />
        <activity android:name=".BasketballPage"             android:screenOrientation="portrait"
            />
        <activity android:name=".BasketballReview"             android:screenOrientation="portrait"
            />
        <activity android:name=".PlaysPage"             android:screenOrientation="portrait"
            />
        <activity android:name=".PlaysReview"             android:screenOrientation="portrait"
            />
        <activity android:name=".TravelPage"             android:screenOrientation="portrait"
            />
        <activity android:name=".TravelReview"             android:screenOrientation="portrait"
            />
        <activity android:name=".GreekPage"             android:screenOrientation="portrait"
            />
        <activity android:name=".GreekReview"            android:screenOrientation="portrait"
            ></activity>
    </application>

</manifest>