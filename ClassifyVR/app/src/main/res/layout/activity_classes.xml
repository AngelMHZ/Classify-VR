<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2D0100">





    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0" >

        <Button
            android:text="History 255B"
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"
            android:gravity="bottom|right"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="100"
            android:id="@+id/buttonHistory"
            android:background="@drawable/historyclass"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1" />

        <Button
            android:text="Geology 150L"
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"
            android:gravity="bottom|right"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="100"
            android:id="@+id/buttonGeology"
            android:background="@drawable/geologyclass"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1" />

        <Button
            android:text="Art 100"
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"
            android:gravity="bottom|right"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="100"
            android:id="@+id/buttonArt"
            android:background="@drawable/artclass"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1" />

        <Button
            android:text="ECE 350"
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"
            android:gravity="bottom|right"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="100"
            android:id="@+id/buttonECE"
            android:background="@drawable/ececlass"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1" />



    </LinearLayout>

</ScrollView>
